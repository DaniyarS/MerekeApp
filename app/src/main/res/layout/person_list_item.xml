<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="172dp"
    android:layout_height="240dp"
    app:cardBackgroundColor="@color/gray_F5"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            android:background="#813030"
            app:circularflow_defaultRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/str_person_image" />

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toStartOf="@+id/productImageView"
            app:layout_constraintTop_toBottomOf="@+id/productImageView"
            tools:text="Rock Crystal" />

        <TextView
            android:id="@+id/productAddressTextview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/productNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/productNameTextView"
            tools:text="пр. Гагарина, 2, уг. ул. Толе би" />

        <ImageView
            android:id="@+id/ratingImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_star"
            android:contentDescription="@string/str_rating_image"
            app:layout_constraintBottom_toBottomOf="@+id/ratingTextView"
            app:layout_constraintEnd_toStartOf="@+id/ratingTextView"
            app:layout_constraintTop_toTopOf="@+id/ratingTextView" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/productNameTextView"
            app:layout_constraintEnd_toEndOf="@+id/productImageView"
            app:layout_constraintTop_toTopOf="@+id/productNameTextView"
            tools:text="4/5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>