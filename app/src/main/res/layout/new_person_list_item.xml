        <TextView
            android:id="@+id/personNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/personImageView"
            app:layout_constraintTop_toBottomOf="@+id/personImageView"
            tools:text="Rock Crystal" />

        <TextView
            android:id="@+id/personDescriptionTextview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
