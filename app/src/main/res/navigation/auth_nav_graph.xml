<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="dev.dslam.merekeapp.presentation.fragments.auth.AuthFragment"
        android:label="fragment_auth" >

        <action
            android:id="@+id/action_authFragment_to_SignInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_authFragment_to_SignUpActivity"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="dev.dslam.merekeapp.presentation.fragments.auth.SignInFragment"
        android:label="fragment_sign_in">

        <action
            android:id="@+id/action_signInFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_signInFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="dev.dslam.merekeapp.presentation.fragments.auth.SignUpFragment"
        android:label="fragment_sign_up" >

        <action
            android:id="@+id/action_signUpFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="dev.dslam.merekeapp.MainActivity"
        android:label="activity_main" />

</navigation>
